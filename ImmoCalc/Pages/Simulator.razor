@page "/simulator"
@inject NavigationManager Navigation

<ion-header>
    <ion-toolbar mode="ios">
        <ion-buttons slot="start">
            <ion-back-button default-href="/" @onclick="@GoBack">Back</ion-back-button>
        </ion-buttons>
        <ion-title>Simulation</ion-title>
    </ion-toolbar>
</ion-header>
<ion-content fullscreen class="ion-padding" scroll-y="false">
    <ion-slides pager="true">
        <ion-slide>
            <ion-content>
                <ion-title>Informations sur le bien</ion-title>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="text" placeholder="Nom">
                </div>
                <div class="form-group">
                    <textarea class="form-control form-control-lg" id="exampleFormControlTextarea1" rows="5" placeholder="Adresse..."></textarea>
                </div>

            </ion-content>
        </ion-slide>

        <ion-slide>
            <ion-content>
                <ion-title>Informations sur le bien</ion-title>
                <div class="form-group">
                    <ClearableInput Label="Prix"></ClearableInput>
                </div>
                <div class="form-group">
                    <ClearableInput Label="Loyer"></ClearableInput>
                </div>

            </ion-content>
        </ion-slide>

        <ion-slide>
            <ion-content>
                <ion-title>Informations sur le bien</ion-title>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="text" placeholder="Nom">
                </div>
                <div class="form-group">
                    <textarea class="form-control form-control-lg" id="exampleFormControlTextarea1" rows="5" placeholder="Adresse..."></textarea>
                </div>

            </ion-content>
        </ion-slide>
    </ion-slides>
</ion-content>

<style>
    ion-slides {
        height: 100%;
    }
</style>

