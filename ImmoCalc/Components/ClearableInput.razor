@using System.Globalization
@using System.Text.RegularExpressions
@using ImmoCalc.Domains
<div class="btn-group">
    <input id="searchinput" type="search" class="form-control" @bind-value="InputValue" @bind-value:event="oninput">
    <span id="searchclear" class="glyphicon glyphicon-remove-circle"></span>
</div>

@code {

    [Parameter]
    public bool ShowCents { get; set; } = false;

    private string InputValue
    {
        get => _inputValue;
        set
        {
            if (value.IsEmpty() || decimal.TryParse(value, out decimal result) )
                _inputValue = value.FormatDecimal(ShowCents);
        }
    }

    private string _inputValue;
}

<style>
    #searchinput {
        width: 100%;
    }
    #searchclear {
        position: absolute;
        right: 5px;
        top: 0;
        bottom: 0;
        height: 14px;
        margin: auto;
        font-size: 14px;
        cursor: pointer;
        color: #ccc;
    }
</style>
